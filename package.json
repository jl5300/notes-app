{
  "name": "server",
  "version": "1.0.0",
  "description": "Message board backend.",
  "main": "server.js",
  "scripts": {
    "start": "npm run build && node dist/server.js",
    "dev": "ts-node-dev --respawn --pretty --transpile-only src/server.ts",
    "build": "tsc && npm run client-build",
    "client-build": "cd client && npm install && npm run build",
    "postinstall": "npm run build",
    "test": "exit 0"
  },
  "keywords": [
    "Express",
    "RestAPI",
    "Notes"
  ],
  "author": "Joel Lozano",
  "license": "ISC",
  "dependencies": {
    "connect-mongo": "^5.0.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "mongoose": "^6.10.4",
    "passport": "^0.6.0",
    "passport-local-mongoose": "^8.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/express-session": "^1.17.7",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.17",
    "@types/passport": "^1.0.12",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
}
